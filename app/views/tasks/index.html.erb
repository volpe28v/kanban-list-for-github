<div class="container-fluid">
  <div id="sending_mail" class="alert alert-info" style="display:none"></div>
  <div id="send_mail_result" class="alert alert-success" style="display:none"></div>

  <div id="books_side_bar_temp"></div>

  <div class="row-fluid" id="body_row">
    <div class="span2" id="books_side_bar">
      <ul class="books-side-list" id="book_list"></ul>
    </div>

    <div class="span10" id="tasks_side_bar">
      <div class="row-fluid">
        <div class="span1">
          <%= link_to( image_tag( current_user.image, :class => "github_img"), current_user.github_url) %>
        </div>
        <div class="span8">
          <div class="login-and-repo"><%= link_to( current_user.github_name, current_user.github_url, target: "_blank" ) %> - <span id="book_name_label"></span></div>
          <form method="post" id="add_todo_form" class="form-inline">
            <input type="text" id="prefix" class="span2" name="prefix" value="" placeholder="Book Name" maxlength="50" style="display:none"/>
            <input type="text" id="add_todo_form_msg" class="span6" value="" placeholder="Issue Title" maxlength="1000"/>
            <button class="btn" id="add_todo_button"/><i class="icon-plus"></i> Issue</button>
          </form>
        </div>

        <div class="span3">
          <div style="float:right">
            <button class="btn btn-mini btn-info" id="show_detail_button"/><i class="icon-zoom-in icon-white"></i> Detail</button>
            <button class="btn btn-mini btn-primary" id="sync_issues_button"/><i class="icon-refresh icon-white"></i> Sync with GitHub</button>
          </div>
          <div id="p_timer_body" class="well" style="display:none">
            <center>
              <span id="p_timer_clock">
                <span id="p_min">00</span><span id="p_delim">.</span><span id="p_sec">00</span>
              </span>
              <button id="p_start" class="btn btn-mini btn-info">Start</button>
              <button id="p_pause" class="btn btn-mini btn-info">Pause</button>
              <button id="p_clear" class="btn btn-mini btn-info">Reset</button>
            </center>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <div id="loader" class="well" style="display:none">
            <center><img src="<%= image_path 'loader.gif' %>"></center>
            <center><p id="loading_msg_area">Tips: <span id="loading_msg"></span></p></center>
          </div>

          <div id="task_list">
            <!-- タスクリストは動的に表示する -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'tasks' %>
<%= javascript_include_tag 'add_todo_form' %>
